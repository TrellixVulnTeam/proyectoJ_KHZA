<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Auditivo33"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/textoEstado"
            android:layout_width="200dp"
            android:layout_height="40dp" />
        <ImageButton
            android:id="@+id/subir_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/imagenenviar"
            android:padding="2dp"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:padding="20dp"
                android:id="@+id/bdrecyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        app:backgroundTint="@color/iconis2"
        android:id="@+id/agalerias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="257dp"
        android:layout_marginTop="350dp"
        android:src="@drawable/galeria"

        />
</RelativeLayout>